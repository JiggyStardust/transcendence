{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../",
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"],
  "globalSetup": "<rootDir>/test/global-setup.cjs",
  "transform": { "^.+\\.ts$": "ts-jest" },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/src"]
}
